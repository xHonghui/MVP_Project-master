<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="确认预约"
        android:textColor="#474747"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:padding="1dp"
        android:textColor="#cc000000"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/divider1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/divider_color_c8"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:id="@+id/dialogLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!--<TextView-->
            <!--android:id="@+id/ok"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:background="@drawable/dialog_selector_fill_parent"-->
            <!--android:textColor="@drawable/dialog_selector_confirm_text_color"-->
            <!--android:clickable="true"-->
            <!--android:gravity="center"-->
            <!--android:text="确认"-->
            <!--android:textSize="18sp" />-->

        <TextView
            android:id="@+id/cancel"
            android:background="@drawable/dialog_selector_cancel"
            android:textColor="@drawable/dialog_selector_cancel_text_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/divider"
            style="@style/divider_vertical"
            android:visibility="gone"
             />

        <TextView
            android:id="@+id/confirm"
            android:background="@drawable/dialog_selector_confirm"
            android:textColor="#0048fc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>