<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="globalDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- 垂直分割线 -->
    <style name="divider_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/color_line</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 水平分割线 -->
    <style name="divider_horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_color_c8</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- 时间选择器popwidnow 显示消失动画 -->
    <style name="timepopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/timepicker_anim_enter_bottom
        </item> <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/timepicker_anim_exit_bottom
        </item> <!-- 指定消失的动画xml -->
    </style>


    <style name="customDialog" parent="@android:style/Theme.Panel">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 对话框出现时背景是否变暗 -->
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Btn_white_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_btn_white</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="btn_white_bg_1" parent="Btn_white_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Btn_blue_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="btn_blue_bg_1" parent="Btn_blue_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
    </style>


    <style name="dialog_up_down_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_up_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_down_exit</item>
    </style>


</resources>